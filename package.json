{
    "name": "@siredvin/typed-peripheral-digitalitems",
    "version": "0.2.1",
    "description": "Typed peripheral library for Digital Items 3 peripherals",
    "files": [
        "./*.d.ts",
        "./*.lua"
    ],
    "publishConfig": {
        "access": "public"
    },
    "author": "SirEdvin",
    "license": "MIT",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "tstl",
        "clean": "rm -f *.lua",
        "lint": "eslint . --ext .ts,.js",
        "depcheck": "depcheck",
        "docs": "typedoc",
        "docs:watch": "typedoc --watch"
    },
    "dependencies": {
        "@jackmacwindows/lua-types": "^2.13.1",
        "@siredvin/api-types": "^1.1.0",
        "@siredvin/cc-types": "^1.1.0",
        "@siredvin/craftos-types": "^1.2.0",
        "@siredvin/typed-peripheral-api": "*",
        "@siredvin/typed-peripheral-base": "*"
    },
    "devDependencies": {
        "typedoc": "^0.28.16",
        "typescript": "*",
        "typescript-to-lua": "*"
    },
    "nx": {
        "targets": {
            "lint": {
                "executor": "@nx/linter:eslint",
                "outputs": [
                    "{options.outputFile}"
                ],
                "options": {
                    "lintFilePatterns": [
                        "packages/typed-peripheral/**/*.{ts,tsx,js,jsx}"
                    ]
                }
            },
            "depcheck": {
                "executor": "nx:run-commands",
                "options": {
                    "command": "depcheck",
                    "cwd": "packages/typed-peripheral"
                }
            }
        }
    }
}
